---
import Page from "../layouts/markup.astro";
import { Stack } from "../ui/components/stack";
import { Logomark, Wordmark } from "../ui/components/logo";
import { Heading } from "../ui/components/typography/heading";
import { Button } from "../ui/components/button";
import { MetricCardGrid } from "../components/metric-card-grid";
import { Card } from "../ui/components/card";
import { Grid } from "../ui/components/grid";
import { Icon } from "../ui/components/icon";
import { type Metric, getRandomInt } from "../components/metric-card";
import { MediaGrid } from "../components/media-grid";
import { Chat } from "../components/chat";

const METRICS: Metric[] = [
  {
    title: "Total Revenue",
    value: `$${getRandomInt(100000)}`,
    likert: "positive",
  },
  {
    title: "Total Calls",
    value: `${getRandomInt(100000)}`,
    likert: "neutral",
  },
  {
    title: "Total Leads Lost",
    value: `${getRandomInt(100)}`,
    likert: "negative",
  },
  {
    title: "Total Leads Lost",
    value: `${getRandomInt(100)}`,
    likert: "negative",
  },
];
---

<Page class="bg-gradient-to-b from-slate-100 to-indigo-50 dark:text-slate-50 dark:from-slate-900 dark:to-indigo-900">
  <Stack>
    <Stack as="header" className="p-4 border-b border-slate-100 dark:border-slate-800 shadow-sm">
      <Stack
        direction="horizontal"
        spacing="between"
        valign="middle"
        className="max-w-7xl mx-auto"
      >
        <Stack className="relative">
          <Logomark />
          <Stack
            gap={1}
            direction="horizontal"
            valign="middle"
            className="absolute top-full w-[324px!important] translate-y-1 px-2 py-1 rounded-md rotate-[-2.3deg] bg-indigo-500"
            fit
          >
            {
              Array.from(Array(5).keys()).map((i) => (
                <Icon name="star" className="w-3 h-3 text-amber-200" />
              ))
            }
            <span class="text-white font-bold">"...made me $50, 000, 000!"</span
            >
          </Stack>
        </Stack>
        <Stack
          as="nav"
          gap={2}
          direction="horizontal"
          align="right"
          fit={false}
        >
          <Button variant="ghost">Learn more</Button>
          <Button variant="ghost">Features</Button>
          <Button variant="ghost">Book a demo</Button>
          <Button>Try for free</Button>
        </Stack>
      </Stack>
    </Stack>
    <Stack className="relative px-4">
      <div
        class="absolute left-1/2 right-0 top-0 -z-10 -ml-16 transform-gpu overflow-hidden blur-3xl xl:ml-24"
        aria-hidden="true"
      >
        <div
          class="aspect-[801/1036] w-[50.0625rem] bg-gradient-to-tr from-indigo-500 to-purple-500 opacity-10"
          style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
        >
        </div>
      </div>
      <Stack
        gap={2}
        align="center"
        className="py-16 lg:pt-48 lg:pb-24 text-center"
      >
        <Heading as="h1" size={{ _: "xlarge", lg: "title" }}>
          Forget Dashboards.
        </Heading>
        <Heading
          as="h2"
          size={{ _: "large", lg: "subtitle" }}
          weight="light"
          className="mx-auto max-w-5xl"
        >
          DataTurk <strong>tells you</strong> what's going on. <strong
            >Don't get lost in ServiceTitan.</strong
          >
          <br />
           You don't have to be math whiz or a data scientist to<br />
          <strong>understand your business.</strong>
        </Heading>
      </Stack>
    </Stack>
    <Stack className="flex overflow-x-hidden overflow-y-auto px-4">
      <MetricCardGrid metrics={METRICS} client:load>
        <Stack gap={4} className="max-w-prose mx-auto">
          <Heading as="h3" size={{ _: "large", lg: "title" }}>
            <strong>A no bullshit update, every month.</strong>
          </Heading>
          <Card className="space-y-4">
            <Card.FullWidth className="border-b dark:border-slate-800 pb-4">
              <strong>From:</strong> dataturk.ai
            </Card.FullWidth>
            <Card.FullWidth className="border-b dark:border-slate-800 pb-4">
              <strong>To:</strong> elmer@elmershomeservices.com
            </Card.FullWidth>
            <Stack gap={4} className="pb-4">
              <Heading>Hi Elmer, here's what you need to know.</Heading>
              <p>
                Your revenue is <strong class="text-red-500">down 15%</strong>
                 from <strong>last month</strong>. It's <strong
                  class="text-green-500">up 10%</strong
                > from last year. Overall <strong
                  >your revenue is lower than expected but better than last
                  year.</strong
                >.
              </p>
              <p>
                Your closed calls are <strong class="text-red-500"
                  >down 30%</strong
                >
                 from <strong>last month</strong>. They're <strong
                  class="text-green-500">up 10%</strong
                > from last year. Overall <strong
                  >your call centre is performing less than expected</strong
                >.
              </p>
              <p>
                Your closed opportunties are <strong class="text-green-500"
                  >up 30%</strong
                >
                 from <strong>last month</strong>. They're <strong
                  class="text-green-500">up 33%</strong
                > from last year. Overall <strong
                  >your opportunities are closing better than expected.</strong
                >.
              </p>
              <Heading size="large" weight="light">
                If you <strong>do one thing</strong> this month, <strong
                  >improve your call center closing rate</strong
                >.
              </Heading>
            </Stack>
          </Card>
          <Stack align="center">
            <Button size="xlarge">Learn about your call center today</Button>
            <span class="pt-24 flex items-center text-slate-400 w-full before:bg-slate-400 after:bg-slate-400 before:inline-block after:inline-block before:grow after:grow before:h-[1px] after:h-[1px] before:mr-4 after:ml-4">or</span>
          </Stack>
        </Stack>
      </MetricCardGrid>
    </Stack>
    <Stack className="relative">
      <div
        class="absolute left-0 top-0 -z-10 -ml-16 transform-gpu overflow-hidden blur-3xl xl:ml-24"
        aria-hidden="true"
      >
        <div
          class="aspect-[801/1036] w-[50.0625rem] bg-gradient-to-tr from-indigo-500 to-purple-500 opacity-20"
          style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
        >
        </div>
      </div>
      <MediaGrid>
        <MediaGrid.Item>
          <img src="/a.png" role="presentation" class="w-full h-full" />
        </MediaGrid.Item>
        <MediaGrid.Item>
          <Stack
            valign="middle"
            align="center"
            className="w-full bg-gradient-to-br from-indigo-500 to-indigo-700"
            fit={false}
          >
            <Heading as="h3" size={{ _: "small", lg: "large" }} className="text-white">
              <strong>Watch the 60 second explainer</strong>
            </Heading>
          </Stack>
        </MediaGrid.Item>

        <MediaGrid.Item>
          <iframe
            src="https://www.youtube.com/embed/5qap5aO4i9A"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen=""
            class="w-full h-full"></iframe>
        </MediaGrid.Item>
      </MediaGrid>
    </Stack>
    <Stack className="-mt-32">
      <Stack className="bg-slate-50 shadow-r dark:bg-slate-900 h-24 lg:h-48 w-full" style={{ mask: 'url(/rounded-top-right.svg) no-repeat', maskSize: 'cover' }} />
      <Stack gap={8} className="bg-slate-50 dark:bg-slate-900 py-16 px-4">
        <Stack gap={2} className="max-w-7xl mx-auto">
          <Heading as="h1" size={{ _: "xlarge", lg: "title" }}>
            An expert on your business, at your fingertips. 
          </Heading>
          <Heading
          as="h2"
          size={{ _: "large", lg: "subtitle" }}
          weight="light"
          >
            Every company gets their own personal assistant, who will send you a monthly update on your business, answer questions to help you understand your business, and connect you with experts to help you grow.
          </Heading>
        </Stack>
        <Stack align="center" className="rounded-xl lg:rounded-2xl bg-indigo-100 max-w-5xl mx-auto p-1 md:p-2">
          <Chat client:idle />
        </Stack>
        <img src="/arrow-down-left.svg" class="relative w-96 mx-auto brightness-200 filter" />
      </Stack> 
    </Stack>
    <Stack className="relative bg-slate-50 px-4 z-2">
      <Stack gap={2} className="max-w-7xl mx-auto">
          <Heading as="h1" size={{ _: "xlarge", lg: "title" }}>
            Ask questions, get answers. 
          </Heading>
          <Heading
            as="h2"
            size={{ _: "large", lg: "xlarge" }}
            weight="light"
            className="max-w-prose"
          >
            It's a struggle to know what's going on in your business. You have to dig through dashboards, spreadsheets, and reports. You have to ask your team for updates. You have to wait for your accountant to send you a report.<br />
            <br />
            It's chaos. It's messy. It's hard to know what's going on. <strong>It doesn't have to be like this</strong><br />
            <br />
            <strong>With DataTurk, everything is just a question away.</strong> You get answers, not dashboards. You get insights, not reports. You get a personal assistant, not a data scientist.
          </Heading>
        </Stack>
      <MediaGrid>
        <MediaGrid.Item>
          <img src="/a.png" role="presentation" class="w-full h-full" />
        </MediaGrid.Item>
        <MediaGrid.Item>
          <img src="/a.png" role="presentation" class="w-full h-full" />
        </MediaGrid.Item>
        <MediaGrid.Item>
          <img src="/a.png" role="presentation" class="w-full h-full" />
        </MediaGrid.Item>
      </MediaGrid>
    </Stack>
    <Stack className="relative bg-slate-50 -mt-32 z-1">
      <Stack className="bg-indigo-50 shadow-r dark:bg-slate-900 h-24 lg:h-48 w-full" style={{ mask: 'url(/rounded-top-right.svg) no-repeat', maskSize: 'cover' }} />
      <Stack className="bg-indigo-50 pt-8 px-4 pb-32">
        <Stack gap={4} className="mx-auto max-w-7xl">
          <Stack direction={{ _: "vertical", lg: "horizontal" }} gap={4}>
            <Stack gap={2} className="max-w-3xl">
              <Heading as="h1" size={{ _: "xlarge", lg: "title" }}>
                  A team of experts is part of the package, too. 
                </Heading>
                <Heading
                  as="h2"
                  size={{ _: "large", lg: "xlarge" }}
                  weight="light"
                  className="max-w-prose"
                >
                  <span>DataTurk is more than just a tool. It's a team of experts who are here to help you grow your business. That's our commitment to you.</span><br />
                  <br />
                  <span>We're here to build a sustainable business, and help you build yours, too.</span><br />
                  <br />
                  <Stack as="ul" gap={2} className="list-disc list-inside">
                    <li>Zero debt, privately held, and built to stay, not exit.</li>
                    <li>99.99% historical uptime, with full transparency.</li>
                    <li>100% of our revenue comes from our customers.</li>
                    <li>Your data is never shared with anyone.</li>
                  </Stack>
                  <br />
                  <span><a href="#" class="inline-block font-bold text-indigo-500 hover:text-indigo-400 underline">Email our CEO anytime</a>, as well. He wants to hear from you.</span>
                </Heading>
              </Stack>
              <Grid gap={2} cols={2}>
                <img src="https://images.unsplash.com/photo-1567532939604-b6b5b0db2604?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHBvcnRyYWl0fGVufDB8fDB8fHww&auto=format&fit=crop&w=900&q=60" role="presentation" class="rounded-lg overflow-hidden aspect-square object-cover w-full" />
                <img src="https://images.unsplash.com/photo-1567532939604-b6b5b0db2604?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHBvcnRyYWl0fGVufDB8fDB8fHww&auto=format&fit=crop&w=900&q=60" role="presentation" class="rounded-lg overflow-hidden aspect-square object-cover w-full" />
                <Grid.Item col={{ start: 1, end: 3 }}>
                  <img src="https://images.unsplash.com/photo-1567532939604-b6b5b0db2604?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHBvcnRyYWl0fGVufDB8fDB8fHww&auto=format&fit=crop&w=900&q=60" role="presentation" class="rounded-lg overflow-hidden aspect-video object-cover w-full h-full" />
                </Grid.Item>  
              </Grid>
            </Stack> 
          </Stack>
        </Stack>
      </Stack>
      <Stack className="relative bg-slate-50 pb-24">
        <Stack className="relative bg-indigo-50 dark:bg-slate-900 h-24 lg:h-48 w-full z-0" style={{ mask: 'url(/rounded-bottom-right.svg) no-repeat', maskSize: 'cover' }} />
        <Stack className="relative max-w-7xl mx-auto -mt-24 z-1">
          <Card className="shadow-2xl">
            <Stack gap={4} align="center" className="p-6">
              <Stack gap={2} align="center">
                <Heading as="h1" size={{ _: "xlarge", lg: "title" }} className="text-indigo-500">
                  The 21 Secrets 
                </Heading>
                <Heading
                  as="h2"
                  size="large"
                  weight="light"
                  className="max-w-prose"
                >
                  of Top Performing Home Service Companies
                </Heading>
              </Stack>
              <Heading size="large" weight="light" className="max-w-prose">
                Our team has collected these time tested and proven secrets from our long term, successful customers. It also includes wisdom from our network of home service and marketing advisors including our decades long mentor The Wizard of Ads, Roy H Williams.
              </Heading>
            </Stack>
          </Card>
        </Stack>
      </Stack>
    </Stack>
    <Stack as="footer" className="bg-indigo-50 dark:bg-black p-4">
      <Stack className="max-w-7xl mx-auto">
        <Wordmark />
      </Stack>
    </Stack>
  </Stack>
</Page>